<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tour.android.jptour.MainActivity">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/main_plan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/main_plan_btn"
            android:textSize="60dp" />

        <Button
            android:id="@+id/main_share_btn"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/main_share_btn"
            android:textSize="60dp" />

        <net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/floating_button"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="right|bottom"
            app:fab_expandDirection="left">

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                app:fab_size="mini"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@android:color/transparent"
                android:src="@drawable/floating_setting"
                app:fab_title="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                app:fab_size="mini"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@android:color/transparent"
                android:src="@drawable/floating_mypage"
                app:fab_title="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                app:fab_size="mini"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@android:color/transparent"
                android:src="@drawable/floating_home"
                app:fab_title="Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
                app:fab_size="mini"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_colorPressed="@android:color/transparent"
                app:fab_title="Call"
                android:src="@drawable/floating_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu>

    </FrameLayout>

</LinearLayout>
